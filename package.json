		"globals": "^16.0.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.3.0",
		"sass": "^1.43.4",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
