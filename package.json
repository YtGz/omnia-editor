{
	"name": "@ytgz/omnia-editor",
	"version": "1.0.0",
	"description": "A lightweight block style editor built on TipTap and Svelte 5",
	"license": "MIT",
	"type": "module",
	"svelte": "./dist/index.js",
	"exports": {
		".": {
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/YtGz/omnia-editor.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"@tiptap/core": "^3.0.0",
		"@tiptap/extension-bubble-menu": "^3.0.0",
		"@tiptap/extension-floating-menu": "^3.0.0",
		"@tiptap/extension-focus": "^3.0.0",
		"@tiptap/extension-history": "^3.0.0",
		"@tiptap/extension-placeholder": "^3.0.0",
		"@tiptap/extension-text-align": "^3.0.0",
		"@tiptap/starter-kit": "^3.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.0.0",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.3.0",
		"sass": "^1.43.4",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.0"
	}
}
